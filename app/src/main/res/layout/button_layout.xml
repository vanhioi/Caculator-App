<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="5"
        app:columnCount="4">

        <Button
            android:id="@+id/btnclear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="C"
            android:backgroundTint="@color/material_dynamic_neutral20"
            android:textSize="25sp"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btnpower"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="^"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked" />

        <Button
            android:id="@+id/btnpercent"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked" />

        <Button
            android:id="@+id/btndivision"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="/"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="0"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="*"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="1"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btnSubstraction"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="2"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="3"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="3"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>
        <Button
            android:id="@+id/btnAddition"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="3"
            app:layout_column="3"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textSize="25sp"
            app:layout_row="4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>
        <Button
            android:id="@+id/btnPoint"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:backgroundTint="@color/material_dynamic_neutral40"
            android:textSize="25sp"
            app:layout_row="4"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:backgroundTint="@color/material_dynamic_neutral20"
            android:textSize="25sp"
            app:layout_row="4"
            app:layout_column="2"
            app:layout_columnWeight="1"
            android:onClick="onButtonClicked"
            app:layout_columnSpan="2"/>


    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>
